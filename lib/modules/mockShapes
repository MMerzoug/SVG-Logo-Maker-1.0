import * as shapes from "../shapes";

export function mockTriangle() {
    const mockTriangle = new shapes.Triangle();
    mockTriangle.render = jest.fn(() => {
        return "<svg></svg>";
    });
    return mockTriangle;
}

export function mockCircle() {
    const mockCircle = new shapes.Circle();
    mockCircle.render = jest.fn(() => {
        return "<svg></svg>";
    });
    return mockCircle;
}

export function mockSquare() {
    const mockSquare = new shapes.Square();
    mockSquare.render = jest.fn(() => {
        return "<svg></svg>";
    });
    return mockSquare;
}